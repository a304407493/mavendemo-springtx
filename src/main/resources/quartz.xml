<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
		"
	default-lazy-init="true">
<!-- 配置 quartz需要做的job -->
	<!-- 1.配置 job类和job类属性 -->
		<!-- 方式1：继承 -->
		<!--
		<bean name="job1" class="org.springframework.scheduling.quartz.JobDetailBean">
			配置job类
			<property name="jobClass" value="com.mavendemo.springtx.QuartzJobExtendsQuartzJobBean" />
			job类属性jobDataAsMap是固定值配置在map的key中
			<property name="jobDataAsMap">
				<map>
					<entry key="timeout" value="0" />
				</map>
			</property>
			报错
			<property name="applicationContextSchedulerContextKey" value="applicationContextKey"/>

		</bean>
		 -->
		<!-- 方式2：不继承 -->
		<bean id="job1" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
			<!-- 执行类 -->
			<property name="targetObject">
				<bean class="com.mavendemo.springtx.QuartzJobNoExtendsQuartzJobBean" />
			</property>
			<!-- 执行方法 -->
			<property name="targetMethod" value="doJob" />
			<!-- 作业不并发调度 -->
			<property name="concurrent" value="false" />
		</bean>
	<!-- 2.配置 job类执行机制 -->
	<!-- 机制1：SimpleTriggerBean频度执行，每隔段时间执行 -->
	<bean id="simpleTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<property name="jobDetail" ref="job1" />
		<property name="startDelay" value="0" /><!-- 调度工厂实例化后，经过0秒开始执行调度 -->
		<property name="repeatInterval" value="10000" /><!-- 每10秒调度一次 -->
	</bean>
	<!-- 机制2：CronTriggerBean规则Cron执行
	<bean id="cronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="job1" />
		<property name="cronExpression" value="0 0 12 * * ?" />
	</bean>
		-->
	<!-- 3.配置 job类的执行机制到Factory中 -->
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<!-- 配置执行机制id名称 -->
				<ref bean="simpleTrigger" />
			</list>
		</property>
	</bean>
</beans>
