					    <port>${jetty.port}</port>
					</httpConnector>
					<!-- 配置自动热部署0代表关闭大于0开启 -->
					<scanIntervalSeconds>${jetty.scanIntervalSeconds}</scanIntervalSeconds>
					<!-- localhost:端口号/下面内容 -->
					<webApp>
			          	<contextPath>/${project.artifactId}</contextPath>
			        </webApp>
			        <!-- 配置jetty停止命令 -->
					<stopKey>shutdown</stopKey>
  					<stopPort>${jetty.stopPort}</stopPort>
		      	</configuration>
		    </plugin>
