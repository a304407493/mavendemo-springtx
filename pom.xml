			<!-- sql插件 -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>sql-maven-plugin</artifactId>
				<version>${maven.plugin.sql.version}</version>
				<!-- sql插件的jar -->
				<dependencies>
					<!-- mysql驱动 -->
					<dependency>
						<groupId>mysql</groupId>
						<artifactId>mysql-connector-java</artifactId>
						<version>${maven.plugin.sql.mysql.connector.version}</version>
					</dependency>
					<!-- oracle驱动 -->
					<dependency>
						<groupId>com.oracle</groupId>
						<artifactId>ojdbc6</artifactId>
						<version>${maven.plugin.sql.oracle.connector.version}</version>
					</dependency>
				</dependencies>
				<!-- sql插件的配置 -->
				<configuration>
					<driver>${maven.plugin.sql.driver}</driver>
					<username>${maven.plugin.sql.username}</username>
					<password>${maven.plugin.sql.password}</password>
					<url>${maven.plugin.sql.url}</url>
				</configuration>
				<executions>
					<!-- 命令创建数据库 -->
					<execution>
			            <id>create-database</id>
			            <phase>process-test-resources</phase>
			            <goals>
			              	<goal>execute</goal>
			            </goals>
			            <configuration>
							<autocommit>true</autocommit>
			             	<sqlCommand>${maven.plugin.sql.command.create.database}</sqlCommand>
			              	<onError>continue</onError>
			            </configuration>
			        </execution>
					<!-- 命令创建数据库表 -->
					<execution>
			            <id>create-table</id>
			            <phase>process-test-resources</phase>
			            <goals>
			              	<goal>execute</goal>
			            </goals>
			            <configuration>
			              	<autocommit>true</autocommit>
			              	<sqlCommand>${maven.plugin.sql.command.create.table}</sqlCommand>
			              	<onError>continue</onError>
			            </configuration>
			        </execution>
			        <!-- 删除表 -->
					<execution>
						<id>drop-db-before-test-if-any</id>
						<phase>process-test-resources</phase>
						<goals>
							<goal>execute</goal>
						</goals>
						<configuration>
							<orderFile>ascending</orderFile>
							<fileset>
								<basedir>${basedir}</basedir>
								<includes>
									<include>${maven.plugin.sql.file.drop}</include>
								</includes>
							</fileset>
							<onError>continue</onError>
						</configuration>
					</execution>
					<!-- 创建表 -->
					<execution>
                        <id>create-db</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <autocommit>true</autocommit>
                            <fileset>
								<basedir>${basedir}</basedir>
								<includes>
									<include>${maven.plugin.sql.file.create}</include>
								</includes>
							</fileset>
                        </configuration>
                    </execution>
                    <!-- 初始化数据 -->
                    <execution>
                        <id>init-db</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <autocommit>true</autocommit>
                            <fileset>
								<basedir>${basedir}</basedir>
								<includes>
									<include>${maven.plugin.sql.file.init}</include>
								</includes>
							</fileset>
                        </configuration>
                    </execution>
                    <!-- 初始化quartz数据 -->
                    <execution>
                        <id>quartz-db</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <autocommit>true</autocommit>
                            <fileset>
								<basedir>${basedir}</basedir>
								<includes>
									<include>${maven.plugin.sql.file.quartz}</include>
								</includes>
							</fileset>
                        </configuration>
                    </execution>
				</executions>
			</plugin>
        </plugins>
	</build>
